<ul class="no-bullets">
  <% @letters.each do |letter| %>
    <li>
      <div class="box">
        <p><%= letter %></p>
      </div>
    </li>
  <% end %>
</ul>
<div class="gameform m-3 p-3">
  <form action="/score" method="post">
    <label for="phrase">What's the longest word you can find?</label>
    <input type="text" name="phrase" placeholder="write a english word">
    <input type="submit" value="send">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
